@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap')

:root
  --nu-cl-bg #fff
  --nu-cl-fg #444
  --nu-cl-focus #08f
  // --nu-cl-hover #f4f8ff
  // --nu-cl-hover #e4f0ff
  --nu-cl-hover #d8e8ff
  --nu-cl-focus-contra #ff
  --nu-cl-border-input #cacace
  --nu-cl-label-input #585858
  --nu-sz-sm 4px
  --nu-sz-md 8px
  --nu-sz-lg 16px
  --nu-sz-xl 28px
  --nu-sz-xxl 48px
  --nu-sz-input-height 36px
  --nu-base-font-size 15px
  --nu-base-font-family Roboto, sans-serif
  //  Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif

nu-m-horz-sm()
  margin-left var(--nu-sz-sm)
  margin-right var(--nu-sz-sm)

nu-transition()
  transition-property color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,backdrop-filter
  // transition-property: color,background-color,border-color,fill,stroke,opacity,box-shadow,transform,filter,-webkit-text-decoration-color,-webkit-backdrop-filter;
  // transition-property: color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,backdrop-filter;
  // transition-property: color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,backdrop-filter,-webkit-text-decoration-color,-webkit-backdrop-filter;
  transition-duration .5s
  transition-timing-function cubic-bezier(.4,0,.2,1)

html
  width 100%
  height 100%

body, #app
  width 100%
  height 100% // On mobile, 100vh is not 100% of the viewport height! It includes the address bar and browser UI. Using 100% instead should fix it, in combination with the 100% height on the html tag.
  margin 0
  padding 0
  background-color var(--nu-cl-bg)
  color var(--nu-cl-fg)
  line-height 1.6
  font-family var(--nu-base-font-family)
  font-size var(--nu-base-font-size)
  font-weight 400
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

*,
*::before,
*::after
  box-sizing: border-box;
  margin: 0;
  position: relative;
  font-weight: normal;

@keyframes button-pop {
  0% {
    transform scale(.9)
  }
  40% {
    transform scale(1.03)
  }
  to {
    transform scale(1)
  }
}

@keyframes icon-pop {
  0% {
    transform scale(.8)
  }
  40% {
    transform scale(1.06)
  }
  to {
    transform scale(1)
  }
}

button, .nu-button
  nu-transition()
  min-height var(--nu-sz-input-height)
  padding var(--nu-sz-md)
  font-family var(--nu-base-font-family)
  font-size var(--nu-base-font-size)
  font-weight 500
  text-transform uppercase
  color var(--nu-cl-fg, #000)
  // background-color var(--nu-cl-bg, #fff)
  // background-color #eee
  // background-color #f4f8ff
  background-color #e4f0ff
  // border 1px solid #ddd
  // border 1px solid var(--nu-cl-border-input)
  border none
  border-radius var(--nu-sz-sm)
  white-space nowrap
  cursor pointer
  user-select none
  display inline-flex
  flex-shrink 0
  flex-wrap wrap
  align-items center
  justify-content center
  text-align center
  text-decoration-line none
  &:hover
    background-color var(--nu-cl-hover)
    color var(--nu-cl-focus)
    // border 1px solid var(--nu-cl-focus)
  &:focus
    box-shadow none
    outline none
    // background-color var(--nu-cl-hover)
    color var(--nu-cl-focus)
    border 1px solid var(--nu-cl-focus)
  &:active
    animation button-pop 0.25s ease-out
    border none

NuIcon
  display flex
  place-items center
  place-content center
  width 32px
  height 32px
  color var(--nu-cl-fg)
  cursor pointer
  // nu-m-horz-sm()
  &:hover
    color var(--nu-cl-focus)
//    color lighten(var(--nu-cl-fg), 30%)
//    background-color lighten(var(--nu-cl-bg), 30%)
  svg
    width 24px // Otherwise not showing on iPhone.
    height 24px
  &.nu-clickable:active
    animation icon-pop 0.25s ease-out

NuGrow
  flex-grow 1

.nu-absolute
  position absolute

.nu-relative
  position relative

.nu-top-bottom-0
  top 0
  bottom 0

.nu-flex
  display flex

.nu-flex-col
  flex-direction column

.nu-flex-grow
  flex-grow 1

.nu-flex-shrink-not-grow
  flex 0 1 auto

.nu-flex-wrap
  flex-wrap wrap

.nu-center-vert
  align-items center

.nu-bottom-vert
  align-items end

.nu-center-horz
  justify-content center

.nu-center-self-horz
  align-self center

.nu-center-text-horz
  text-align center

.nu-w-full
  width 100%

.nu-w-lg
  width var(--nu-sz-lg)

.nu-m-vert-sm
  margin-top var(--nu-sz-sm)
  margin-bottom var(--nu-sz-sm)

.nu-m-vert-md
  margin-top var(--nu-sz-md)
  margin-bottom var(--nu-sz-md)

.nu-mt-md
  margin-top var(--nu-sz-md)

.nu-mb-sm
  margin-bottom var(--nu-sz-sm)

.nu-mb-md
  margin-bottom var(--nu-sz-md)

.nu-ml-auto
  margin-left auto

.nu-m-horz-sm
  nu-m-horz-sm()

.nu-m-r-md
  margin-right var(--nu-sz-md)

.nu-m-l-md
  margin-left var(--nu-sz-md)

.nu-m-r-sm
  margin-right var(--nu-sz-sm)

.nu-p-sm
  padding var(--nu-sz-sm)

.nu-p-md
  padding var(--nu-sz-md)

.nu-p-lg
  padding var(--nu-sz-lg)

.nu-pl-xl
  padding-left var(--nu-sz-xl)

.nu-p-vert-0
  padding-top 0
  padding-bottom 0

.nu-p-vert-md
  padding-top var(--nu-sz-md)
  padding-bottom var(--nu-sz-md)

.nu-p-horz-sm
  padding-left var(--nu-sz-sm)
  padding-right var(--nu-sz-sm)

.nu-gap-sm
  gap var(--nu-sz-sm)

.nu-gap-md
  gap var(--nu-sz-md)

input, .nu-input
  nu-transition()
  flex-shrink 1
  height var(--nu-sz-input-height)
  padding-left var(--nu-sz-md)
  padding-right var(--nu-sz-md)
  font-size var(--nu-base-font-size)
  line-height var(--nu-base-font-size)
  border 1px solid var(--nu-cl-border-input)
  border-radius 2px
  &:hover
    border-color var(--nu-cl-focus)
  &:focus
    box-shadow none
    outline none
    border-color var(--nu-cl-focus)

.nu-input-sm
  height var(--nu-sz-xl)
  padding-left var(--nu-sz-md)
  padding-right var(--nu-sz-md)
  font-size calc(var(--nu-base-font-size) * 0.8)
  line-height calc(var(--nu-base-font-size) * 0.8)

.nu-label
  user-select none
  justify-content space-between
  color var(--nu-cl-label-input)

.nu-label-text
  font-size var(--nu-base-font-size)
  line-height var(--nu-base-font-size)

.nu-label-text-alt
  font-size calc(var(--nu-base-font-size) * 0.8)
  line-height calc(var(--nu-base-font-size) * 0.8)
